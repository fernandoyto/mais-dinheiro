<h1>Login Page</h1>

<div>
  <form action="/login" method="post">
    {{!-- <input type="text" name="email" placeholder="Email" required> --}}
    <div class="group">
      <input class="effect"  type="text" name="email" placeholder="placeholder" required>
      <label>Email</label>
      <span class="line"></span>
    </div>

    <div class="group">
      <input class="effect" type="password" name="password" placeholder="placeholder" required>
      <label>Password</label>
      <span class="line"></span>
    </div>


    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}
    <button type="submit">Login</button>
  </form>
</div>