<h1>Login Page</h1>

<div>
  <form action="/login" method="post">
    <input type="text" name="email" placeholder="Email">
    <br>
    <input type="password" name="password" placeholder="Password">
    <br>

    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
    <button type="submit">Login</button>
  </form>
</div>