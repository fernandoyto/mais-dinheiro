<h1 class="pt-5">Sign Up</h1>

<div class="d-flex justify-content-center">
    <div>
        <form action="/signup" method="POST">
            <div class="group">
                <input class="effect" type="text" name="firstName" placeholder="placeholder" required>        
                <label>First Name</label>
                <span class="line"></span>
            </div>

            <div class="group">
                <input class="effect"  type="text" name="lastName" placeholder="placeholder" required>
                <label>Last Name</label>
                <span class="line"></span>
            </div>
            
            <div class="group">
                <input class="effect" type="email" name="email" placeholder="placeholder" required>
                <label>Email</label>
                <span class="line"></span>
            </div>

            <div class="group">
                <input class="effect" type="password" name="password" placeholder="placeholder" required>
                <label>Password</label>
                <span class="line"></span>
            </div>

            {{#if errorMessage}}
                <p>{{errorMessage}}</p>
            {{/if}}

            <button class="crazy-button" type="submit">Sign up Now!</button>
        </form>

        <p class="second-color mt-3 txt-center">
            Already have an account? <br>
            Go to your <a class="second-color" href="/login">Login Page!</a> 
        </p>
    </div>
</div>